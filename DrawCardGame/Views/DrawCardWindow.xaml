<Window x:Class="DrawCardGame.DrawCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        Title="抽卡界面" Height="300" Width="400"
        Background="White"
        Loaded="Window_Loaded">

    <Grid Margin="5">
        <!-- 顶部标题 -->
        <TextBlock Text="获得奖励"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,0"
                   VerticalAlignment="Top"/>

        <!-- 倒计时文字 -->
        <TextBlock x:Name="CountdownText"
                   Text="请在 30 秒内抽卡"
                   FontSize="14"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"
                   VerticalAlignment="Top"/>

        <!-- 抽卡按钮 -->
        <Button x:Name="DrawCardButton"
                Content="开始抽卡"
                Width="130" Height="35"
                FontSize="14"
                Click="DrawCardButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"/>

        <!-- 卡片展示区域（动画结束后显示） -->
        <Image x:Name="Card1Image"
               Width="80" Height="120"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="50,0,0,0"
               Visibility="Collapsed"
               Opacity="0" />

        <Image x:Name="Card2Image"
       Width="80" Height="120"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       Margin="0,0,50,0"
       Visibility="Collapsed"
       Opacity="0" />



        <!-- GIF 动画区域（默认可见） -->
        <Image x:Name="OpenBoxGif"
               Width="150"
               Height="100"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Visibility="Visible"
               Margin="0,0,0,50"/>
    </Grid>
</Window>













