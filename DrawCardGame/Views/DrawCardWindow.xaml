<Window x:Class="DrawCardGame.DrawCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="抽卡界面" Height="300" Width="400"
        Background="White"
        Loaded="Window_Loaded">

    <Grid Margin="5">
        <!-- 顶部标题 -->
        <TextBlock Text="获得奖励"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,0"
                   VerticalAlignment="Top"/>

        <!-- 倒计时文字 -->
        <TextBlock x:Name="CountdownText"
                   Text="请在 30 秒内抽卡"
                   FontSize="14"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"
                   VerticalAlignment="Top"/>

        <!-- 卡片框 -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <!-- 卡片 1 -->
            <Border Grid.Column="0" Width="80" Height="120" Background="#EEE"
                    BorderBrush="Black" BorderThickness="1" CornerRadius="6"
                    HorizontalAlignment="Right" Margin="0,0,40,0">
                <Image x:Name="Card1Image"
                       Width="70" Height="110"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- 卡片 2 -->
            <Border Grid.Column="2" Width="80" Height="120" Background="#EEE"
                    BorderBrush="Black" BorderThickness="1" CornerRadius="6"
                    HorizontalAlignment="Left" Margin="40,0,0,0">
                <Image x:Name="Card2Image"
                       Width="70" Height="110"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- 抽卡按钮 -->
        <Button Content="开始抽卡"
                Width="130" Height="35"
                FontSize="14"
                Click="DrawCardButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"/>

        <!-- 箱子图像（放大） -->
        <Image Source="pack://application:,,,/Assets/70cb140ab63a37e7d6e669d5ef1c698453520970.png"
               Width="150"
               Height="94"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,45"/>
    </Grid>
</Window>











