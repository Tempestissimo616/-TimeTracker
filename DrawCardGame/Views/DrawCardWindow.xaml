<Window x:Class="DrawCardGame.DrawCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawCardGame"
        mc:Ignorable="d"
        Title="DrawCardWindow" Height="1000" Width="1000">

    <Grid Margin="0,0,68,-5">
        <!-- 顶部标题 -->
        <TextBlock HorizontalAlignment="Center"
                   Margin="0,38,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Text="获得奖励"/>

        <!-- 图片下方按钮 -->
        <Button Content="开始抽卡"
                Width="160" Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="412,0,0,84"
                FontSize="18"
                Click="DrawCardButton_Click"/>

        <!-- 两个卡片框 向左右展开 向上提起 -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="177,0,0,0">
            <!-- 卡片 1 -->
            <Border Width="150" Height="220" Background="#EEE"
                    BorderBrush="Black" BorderThickness="2" CornerRadius="10"
                    Margin="0,0,250,100">
                <Image x:Name="Card1Image"
                       Width="130" Height="200"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <!-- 卡片 2 -->
            <Border Width="150" Height="220" Background="#EEE"
                    BorderBrush="Black" BorderThickness="2" CornerRadius="10"
                    Margin="40,0,40,100">
                <Image x:Name="Card2Image"
                       Width="130" Height="200"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- 将箱子图像放在最底部位置（卡片框原来位置） -->
        <Image Source="../Assets/70cb140ab63a37e7d6e669d5ef1c698453520970.png"
               Height="300"
               VerticalAlignment="Top"
               Margin="316,355,316,0"/>
    </Grid>
</Window>

