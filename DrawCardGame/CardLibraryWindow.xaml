<Window x:Class="DrawCardGame.CardLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="卡牌图鉴" Height="600" Width="800" Loaded="Window_Loaded">

    <DockPanel>
        <!-- 顶部按钮 -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="10">
            <Button Content="清空卡片数据" Click="ClearCards_Click" Padding="10,5" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- 滚动区域展示卡片 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="CardWrapPanel" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" />
        </ScrollViewer>
    </DockPanel>

</Window>



