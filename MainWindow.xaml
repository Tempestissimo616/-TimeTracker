<Window x:Class="Wallet_Payment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent" 
        Height="700" 
        Width="1180">

    <Grid>
        <!--Grid Background-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="25 0 0 25" Width="220">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#343155" Offset="0" />
                        <GradientStop Color="#3B2E58" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border CornerRadius="0 25 25 0" MouseDown="Border_MouseDown" Margin="218,0,-2,0" Grid.ColumnSpan="2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3E3A65" Offset="0" />
                        <GradientStop Color="#473765" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!--Grid Controls-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Main Menu-->
            <StackPanel Width="240">
                <StackPanel Orientation="Horizontal" Margin="0 50 20 40" HorizontalAlignment="Center"/>

                <Button Style="{StaticResource activeMenuButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="53*"/>
                            <ColumnDefinition Width="34*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="FolderOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Wallet" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Left" Visibility="Visible" Style="{StaticResource buttonIconExpand}" Grid.Column="1" Margin="58,4,0,4" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="BellOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Notifications" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Name="sal" Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Money" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Deposit" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Clone" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Records" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}" Width="204" Click="Button_Click">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CommentOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Messages" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Television" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Monitoring" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CreditCard" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="My Cards" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Separator Background="#e0e0e0" Opacity="0.5" Margin="50 15 60 15"/>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="FolderOutlinepenOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Accounts" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CircleOutlineNotch" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Logout" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>
            </StackPanel>

            <!--Transaction Panel-->
            <Grid Grid.Column="1">
                <!--Transfer Panel-->
                <Border Style="{StaticResource border}" Margin="20,118,20,0" Height="524">
                    <StackPanel>

                        <!-- 专注模式 -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="专注模式" Foreground="#E0E0E0" FontSize="16" FontWeight="Bold"/>
                            <Button x:Name="FocusModeButton"
                                Background="#2D254A"
                                BorderThickness="0"
                                Padding="8"
                                Cursor="Hand"
                                Margin="0,8,0,0"
                                Click="FocusModeButton_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock x:Name="FocusModeText" Text="工作" Foreground="#fff" FontSize="15" HorizontalAlignment="Left"/>
                            </Button>

                            <!-- 下拉菜单（已修复 CornerRadius） -->
                            <Popup x:Name="FocusModePopup" PlacementTarget="{Binding ElementName=FocusModeButton}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                <Border Background="#2D254A" CornerRadius="8" Padding="8" Width="120">
                                    <StackPanel>
                                        <TextBlock Text="阅读" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="FocusModeItem_Click"/>
                                        <TextBlock Text="工作" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="FocusModeItem_Click"/>
                                        <TextBlock Text="电影" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="FocusModeItem_Click"/>
                                        <TextBlock Text="游戏" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="FocusModeItem_Click"/>
                                        <TextBlock Text="其他" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="FocusModeItem_Click"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>

                        <!-- 白名单 -->
                        <StackPanel Margin="0,40,0,0">
                            <TextBlock Text="白名单" Foreground="#E0E0E0" FontSize="16" FontWeight="Bold"/>
                            <Border x:Name="WhitelistBox"
                                    Background="#2D254A"
                                    CornerRadius="8"
                                    Padding="8"
                                    MouseLeftButtonUp="WhitelistBox_Click"
                                    Cursor="Hand"
                                    Margin="0,8,0,0">
                                                            <TextBlock x:Name="WhitelistTextBlock" Text="点击设置白名单" Foreground="#aaa" FontSize="15"/>
                                                        </Border>

                            <Popup x:Name="WhitelistPopup"
       PlacementTarget="{Binding ElementName=WhitelistBox}"
       Placement="Bottom"
       StaysOpen="False"
       AllowsTransparency="True">
                                <Border Background="#2D254A" CornerRadius="8" Padding="16" Width="340">
                                    <StackPanel>
                                        <!-- 标题 -->
                                        <TextBlock Text="选择允许的应用"
                       Foreground="#fff"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

                                        <!-- 搜索框 -->
                                        <TextBox x:Name="AppSearchBox"
                     Margin="0,0,0,8"
                     Height="28"
                     Background="#22223A"
                     Foreground="#fff"
                     BorderThickness="0"
                     Padding="6"
                     TextChanged="AppSearchBox_TextChanged" />

                                        <!-- 应用列表 -->
                                        <ListBox x:Name="AppListBox"
                     SelectionMode="Multiple"
                     Height="200"
                     BorderThickness="0"
                     Background="#22223A"
                     Foreground="#fff"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ItemTemplate="{StaticResource AppListBoxItemTemplate}" />

                                        <!-- 确定按钮 -->
                                        <Button Content="确定"
                    Background="#3B2E58"
                    Foreground="#fff"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Height="36"
                    Margin="0,12,0,0"
                    Click="WhitelistConfirm_Click"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>

                        <!-- 专注节奏 -->
                        <StackPanel Margin="0,40,0,0">
                            <TextBlock Text="专注节奏" Foreground="#E0E0E0" FontSize="16" FontWeight="Bold"/>
                            <Button x:Name="RhythmButton"
                                Background="#2D254A"
                                BorderThickness="0"
                                Padding="8"
                                Cursor="Hand"
                                Margin="0,8,0,0"
                                Click="RhythmButton_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock x:Name="RhythmText" Text="高效HIIT" Foreground="#fff" FontSize="15"/>
                            </Button>

                            <!-- 下拉菜单（已修复 CornerRadius） -->
                            <Popup x:Name="RhythmPopup" PlacementTarget="{Binding ElementName=RhythmButton}" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                <Border Background="#2D254A" CornerRadius="8" Padding="8" Width="160">
                                    <StackPanel>
                                        <TextBlock Text="高效HIIT" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="RhythmItem_Click"/>
                                        <TextBlock Text="经典番茄钟" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="RhythmItem_Click"/>
                                        <TextBlock Text="超日节律" Style="{StaticResource FocusModeItemStyle}" MouseLeftButtonDown="RhythmItem_Click"/>
                                    </StackPanel>
                                </Border>
                            </Popup>

                            <!-- 时间显示 -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Border Background="#22223A" CornerRadius="6" Padding="6" Margin="0,0,8,0">
                                    <TextBlock x:Name="FocusTimeText" Text="15" Foreground="#4ADE80" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="min focus" Foreground="#aaa" Margin="0,0,8,0"/>
                                <TextBlock Text="+" Foreground="#aaa" Margin="0,0,8,0"/>
                                <Border Background="#22223A" CornerRadius="6" Padding="6" Margin="0,0,8,0">
                                    <TextBlock x:Name="RestTimeText" Text="2" Foreground="#4ADE80" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="min rest" Foreground="#aaa"/>
                                
                                
                            </StackPanel>
                        </StackPanel>



                    </StackPanel>

                    
                </Border>

                <Button x:Name="StartFocusButton"
        Content="开始专注"
        Style="{StaticResource FocusButtonStyle}"
        Margin="78,527,78,125"
        Click="StartFocusButton_Click"/>
                <!--Bank Card-->
            </Grid>

            <!--Info Panel-->
            <StackPanel Grid.Column="2" Margin="0 0 20 0">

                <!--Top Menu-->
                <StackPanel Orientation="Horizontal" Margin="20 40 20 0" HorizontalAlignment="Right"/>

                <!--Info Card-->

                <!--Information Card-->
                <Border Style="{StaticResource border}" Height="234" Margin="20">
                    <Border Background="#2D254A" CornerRadius="24" Margin="0,-39,0,-39" Padding="24" Width="421">
                        <StackPanel>
                            <TextBlock Text="专注时长统计" Foreground="#7ED957" FontWeight="Bold" FontSize="22" Margin="0,0,0,16"/>
                            <Canvas x:Name="FocusStatsChart" Height="200" Margin="0,0,0,0"/>
                            <StackPanel x:Name="FocusStatsLabels" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Style="{StaticResource border}" Height="266" Margin="0,30,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsControl x:Name="UsageList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0 12 0 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <!-- 图标 -->
                                        <Image Grid.RowSpan="2" Grid.Column="0" Width="32" Height="32"
       Source="{Binding Icon}" VerticalAlignment="Center" Margin="-4,0,5,0"/>
                                        <!-- 应用名 -->
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ProcessName}" 
                                   FontSize="13" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                        <!-- 进度条 -->
                                        <Border Grid.Column="1" Grid.Row="1" Height="18" CornerRadius="6" Background="#22223A" BorderBrush="#444466" BorderThickness="1" Margin="0,0,24,0">
                                            <Grid>
                                                <Rectangle Fill="#4ADE80"
                                           RadiusX="6" RadiusY="6"
                                           HorizontalAlignment="Left"
                                           Height="18"
                                           Width="{Binding Duration, Converter={StaticResource BarWidthConverter}}"/>
                                            </Grid>
                                        </Border>
                                        <!-- 时长 -->
                                        <TextBlock Grid.Column="2" Grid.RowSpan="2"  Text="{Binding DurationText}" 
           VerticalAlignment="Center" HorizontalAlignment="Right"
           Foreground="#E0E0E0" FontSize="12" FontWeight="Heavy" Margin="0,0,20,-5" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!--Security Card-->

                <!--Usage Tracker Card-->

            </StackPanel>

        </Grid>

    </Grid>
</Window>